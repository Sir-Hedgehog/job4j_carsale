<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" version="3.0">
    <servlet>
        <servlet-name>CarListServlet</servlet-name>
        <servlet-class>ru.job4j.carsale.controllers.CarListServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>AddCarServlet</servlet-name>
        <servlet-class>ru.job4j.carsale.controllers.AddCarServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateStatusServlet</servlet-name>
        <servlet-class>ru.job4j.carsale.controllers.UpdateStatusServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UploadS3Servlet</servlet-name>
        <servlet-class>ru.job4j.carsale.controllers.UploadS3Servlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DownloadS3Servlet</servlet-name>
        <servlet-class>ru.job4j.carsale.controllers.DownloadS3Servlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CarListServlet</servlet-name>
        <url-pattern>/base</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddCarServlet</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateStatusServlet</servlet-name>
        <url-pattern>/update</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UploadS3Servlet</servlet-name>
        <url-pattern>/upload</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DownloadS3Servlet</servlet-name>
        <url-pattern>/download</url-pattern>
    </servlet-mapping>
</web-app>